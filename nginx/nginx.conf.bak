events {}

http {
  server {
    listen 80;
    server_name localhost;
    access_log /var/log/nginx/access.log;
    error_log /var/log/nginx/error.log warn;

    # FastAPI backend
    location /api/ {
      proxy_pass http://backend:8010/;
      proxy_set_header Host $host;
      proxy_set_header X-Real-IP $remote_addr;
    }

    # PHP tools
    location /php/ {
        root /var/www/html;
        index index.php;
        try_files $uri =404;
        access_log /var/log/nginx/php_access.log;
        error_log  /var/log/nginx/php_error.log warn;
    }

    location ~ ^/php/(.*\.php)$ {
        root /var/www/html;
        include fastcgi_params;
        fastcgi_pass php:9000;
        fastcgi_param SCRIPT_FILENAME /var/www/html/php/$1;
    }

    # Static frontend
    location / {
      root /var/www/html;
      index index.html;
      try_files $uri /index.html;
    }
  }
}
